.top-box {
  width: 100%;
  height: 100vh;
  background-color: #007AFF;
  z-index: -99;
}
.top-box .top-box-subset {
  width: 100%;
  height: 400rpx;
  background-color: #FFFFFF;
  border-radius: 0 0 50% 0;
}
.top-box .top-box-subset .img-box1 {
  width: 80%;
  height: 500rpx;
  z-index: 1;
}
.top-box .img-box2 {
  top: -360rpx;
  left: 100rpx;
  z-index: 0;
  margin-top: -300rpx;
